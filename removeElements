# Definition for singly-linked list.
# class ListNode:
#     def __init__(self, x):
#         self.val = x
#         self.next = None

class Solution:
    def removeElements(self, head: ListNode, val: int) -> ListNode:
        dummyhead = cur = ListNode(0)
        cur.next = head   
        while cur.next:   
            while cur.next and cur.next.val != val:     
                cur = cur.next
            if cur.next:   
                cur.next = cur.next.next    
        return dummyhead.next
